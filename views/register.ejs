<html lang="en">
    <head>
      <meta charset="utf-8">
      <title>Home - The Meow-sic Vet</title>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="stylesheet" href="/css/style.css">
      <link rel="icon" href="images/fav.jpg">
      <script>
        function validateForm() {
          const username = document.getElementById('username').value;
          const password = document.getElementById('password').value;
          const usernameRegex = /^[a-zA-Z0-9]+$/;
          const passwordRegex = /^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{4,}$/;
    
          if (!usernameRegex.test(username)) {
            alert('Username can only contain letters and digits.');
            return false;
          }
    
          if (!passwordRegex.test(password)) {
            alert('Password must be at least 4 characters long and contain at least one letter and one digit.');
            return false;
          }
    
          return true;
        }
      </script>
    
    </head>
  
    <body>
      <div class="body">
  
        <!-- HEADER -->
        <div class="header">
      <%- include('header') %>
    </div>
    <!-- Content for Home page goes here -->
     <!-- SIDE MENU -->
     <div class="sideMenu">
        <p>Quicks Links</p>
        <a href="/">Home</a>
        <a href="/pets">Browse Available Pets</a>
        <a href="/find">Find a Dog/Cat</a>
        <a href="/dog">Dog Care</a>
        <a href="/cat">Cat Care</a>
        <a href="/give">Have a pet to give away?</a>
        <a href="/contact">Contact Us</a>
        <a href="/register">Register</a>
        <a href="/login">Login</a>
        <a href="/logout">Logout</a>
      </div>
      <div class="content">
        <p class="contentHeader">Account Setup Page</p>
          <% if (locals.errorMessage) { %>
            <p style="color: red;"><%= errorMessage %></p>
          <% } %>
          <% if (locals.successMessage) { %>
            <p style="color: green;"><%= successMessage %></p>
          <% } %>
          <form action="/register" method="post" onsubmit="return validateForm()">
            <label for="username" style="padding-left: 15px">Username:</label>
            <input type="text" id="username" name="username" required><br><br>
            <label for="password" style="padding-left: 15px">Password: </label>
            <input type="password" id="password" name="password" required><br><br>
            <button type="submit">Register</button>




          </form>
      </div>
      <div class="footer">
        <%- include('footer') %>
      </div>
    </div>
    <script src="/js/_script.js"></script>
  </body>
  </html>